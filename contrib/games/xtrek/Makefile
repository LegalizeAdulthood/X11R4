#Imakefile for xtrek 5.4

#remove if not using gcc on a Sun

CC 		= cc -O
TARGET_ARCH 	=
CFLAGS 		= -I.. -I.

PREFIX		= /afs/andrew.cmu.edu/usr0/games
XTREKBINDIR	= $(PREFIX)/bin/.unpriv/@sys
XTREKLIBDIR	= $(PREFIX)/lib/xtrek
FONTDIR		= $(PREFIX)/fonts/x11
TEMPDIR		= /tmp
PLANETFILE	= /tmp/.planets
SCOREFILE	= /tmp/scores
MOTDFILE	= $(XTREKLIBDIR)/motd
DEFCONFIG	= $(XTREKLIBDIR)/default.config
XTREKOWNER	= games
XTREKGROUP	= src
XTREK		= xtrek
XTREKD		= xtrekd
SYS_LIBRARIES 	= -lm -lX11
XTREKFONT	= xtrek

#========= Do Not Change Anything Below

INSTALLFLAGS    = -s -g $(XTREKGROUP) -o $(XTREKOWNER)

SRCS	= \
